@using Microsoft.EntityFrameworkCore.Internal
@model SFA.DAS.AdminService.Web.ViewModels.CertificateDelete.CertificateConfirmDeleteViewModel

@{
    ViewBag.Title = "Check your answers before deleting this certificate";
    Layout = "_Layout";
}

<a class="govuk-back-link" asp-action="AuditDetails" asp-controller="CertificateDelete">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <h1 class="govuk-heading-xl">
        Check your answers before deleting this certificate
    </h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-l">Certificate details</h2>
            <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Apprenticeship name
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.FullName
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        ULN
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.Uln
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Certificate number
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.CertificateReference
                    </dd>
                </div>
            </dl>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-heading-l">Audit details</h2>
            <dl class="govuk-summary-list__row-width-one-quarter">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Staff member
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.UserName
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Reason for deleting
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.ReasonForDeletion
                    </dd>
                    <dd class="govuk-summary-list__value">
                        <a asp-action="AuditDetails" asp-controller="CertificateDelete">Change</a>
                    </dd>
                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Task or incident number
                    </dt>
                    <dd class="govuk-summary-list__value">
                        @Model.IncidentNumber
                    </dd>
                    <dd class="govuk-summary-list__value">
                        <a asp-action="AuditDetails" asp-controller="CertificateDelete">Change</a>
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</main>