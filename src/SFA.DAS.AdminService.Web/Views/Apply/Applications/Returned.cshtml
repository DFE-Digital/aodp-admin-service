@using SFA.DAS.AdminService.Web.Helpers;

@model SFA.DAS.AdminService.Web.ViewModels.Apply.Applications.ApplicationReturnedViewModel

@{
    ViewBag.Title = "Feedback Sent";
    var BackAction = ApplicationReviewHelpers.ApplicationBacklinkAction(null, Model?.SequenceNo);
}

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <div class="govuk-panel govuk-panel--confirmation">
                <h1 class="govuk-panel__title">
                    Feedback sent
                </h1>
            </div>

            <p class="govuk-body">
                An email has been sent to the applicant.
            </p>

            <h2 class="govuk-heading-m">What do you want to do next?</h2>

            <p class="govuk-body">
                <a class="govuk-link" asp-action="@BackAction" asp-controller="Application">Return to applications</a>
            </p>
            <p class="govuk-body">
                <a class="govuk-link" target="_blank" href="https://www.surveymonkey.co.uk/r/P8YBH9J">What did you think of this service?</a> (takes 30 seconds)
            </p>

        </div>
    </div>
</main>