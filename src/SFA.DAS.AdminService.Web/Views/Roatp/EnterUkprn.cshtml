@model SFA.DAS.AdminService.Web.ViewModels.Roatp.AddOrganisationViaUkprnViewModel

@{ 
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "What is the organisation's UKPRN?"; 
}

<div class="govuk-breadcrumbs">
    <ol class="govuk-breadcrumbs__list">
        <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" asp-action="Index" asp-controller="Dashboard">Dashboard</a>
        </li>
        <li class="govuk-breadcrumbs__list-item" aria-current="page">Add a new training provider</li>
    </ol>
</div>

<main class="govuk-main-wrapper " id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

            <div class="js-error-summary govuk-error-summary" role="alert" aria-labelledby="error-summary-title" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="js-error-summary-list govuk-list govuk-error-summary__list"></ul>
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            <li><a sfa-validation-for="UKPRN"></a></li>
                        </ul>
                    </div>
                </div>
            }

            <h1 class="govuk-heading-xl">
                What is the organisation's UKPRN?
            </h1>

            <form method="post" asp-action="UkprnPreview" asp-controller="AddRoatpOrganisation">
                <div class="govuk-form-group" sfa-validation-for="UKPRN" sfa-validationerror-class="govuk-form-group--error">

                    <label for="UKPRN" class="govuk-label">UKPRN</label>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <span class="govuk-error-message" asp-validation-for="UKPRN"></span>
                    }

                    <input
                        id="UKPRN"
                        name="UKPRN"
                        type="text"
                        class="govuk-input govuk-input--width-10"
                        asp-for="UKPRN"
                        sfa-validation-for="UKPRN"
                        sfa-validationerror-class="govuk-form-control--error"
                    />
                </div>
                <input type="submit" class="govuk-button" value="Continue" />
            </form>
        </div>
    </div>
</main>


