@using SFA.DAS.AssessorService.Domain.Extensions
@model SFA.DAS.AdminService.Web.ViewModels.Roatp.Gateway.LegalNamePageViewModel

@{
    var heading = "Legal name check";

    ViewBag.Title = $"Gateway - {heading}";
    Layout = "_Layout";
    var caption = "Organisation checks";
     var formGroupError = Model.ErrorMessages != null && Model.ErrorMessages.Any() ? "govuk-form-group--error" : "";
    var isErrorFailText = "";
    var noSelectionMessage = "";
    var failTextMessage = "";
    if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
    {
        foreach (var error in Model.ErrorMessages)
        {
            if (error.Field == "OptionPass")
            {
                noSelectionMessage = error.ErrorMessage;
            }

            if (error.Field == "OptionFailText")
            {
                isErrorFailText = "govuk-textarea--error-override";
                failTextMessage = error.ErrorMessage;
            }
        }
    }


}

<a asp-action="InProgressApplications" asp-controller="RoatpGateway" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model.ErrorMessages!=null && Model.ErrorMessages.Any())
            {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                    <ul class="govuk-list govuk-error-summary__list">
                        @foreach (var error in Model.ErrorMessages)
                            {
                        <li><a href="#@error.Field">@error.ErrorMessage</a></li>
                            }
                    </ul>
                </div>
            </div>
            }

            <span class="govuk-caption-xl">
                @caption
            </span>

            <h1 class="govuk-heading-xl">@heading</h1>


            <div class="govuk-!-margin-bottom-4">
                @if (Model.Ukrpn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    UKPRN: @Model.Ukrpn
                </p>
                    }

                @if (Model.ApplicationSubmittedOn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Application submitted on: @Model.ApplicationSubmittedOn.ToSfaShortDateString()
                </p>
                    }


                @if (Model.SourcesCheckedOn!=null)
                    {
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Sources checked on:  @Model.SourcesCheckedOn.ToSfaShortDateString()
                </p>
                    }
            </div>


        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table govuk-!-margin-bottom-9">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th class="govuk-table__header" scope="col">Source</th>
                        <th class="govuk-table__header" scope="col">Legal name</th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">

                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Submitted application data</td>
                        <td class="govuk-table__cell">@Model.ApplyLegalName</td>
                    </tr>
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">UKRLP data</td>
                    <td class="govuk-table__cell">@Model.UkrlpLegalName</td>
                </tr>
                @if (!string.IsNullOrEmpty(Model.CompaniesHouseLegalName))
                {
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Companies House data</td>
                        <td class="govuk-table__cell">@Model.CompaniesHouseLegalName</td>
                    </tr>
                }
                @if (!string.IsNullOrEmpty(Model.CharityCommissionLegalName))
                {
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">Charity Commission data</td>
                        <td class="govuk-table__cell">@Model.CharityCommissionLegalName</td>
                    </tr>
                }
                </tbody>
            </table>
                
        </div>
    </div>

    @if (Model.ApplicationId != Guid.Empty)
    {
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form class="js-disable-on-submit" asp-action="EvaluateLegalNamePage" asp-controller="RoatpGateway">
                <input type="hidden" name="ApplicationId" value="@Model.ApplicationId" />
                <input type="hidden" name="PageId" value="@Model.PageId" />

                <div class="govuk-form-group @formGroupError">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                            <h2 class="govuk-fieldset__heading">
                                What is the outcome of this check?
                            </h2>
                        </legend>

                        @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
                            {
                        @foreach (var error in Model.ErrorMessages)
                                {
                        @if (error.Field == "OptionPass")
                                    {
                        <span class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @error.ErrorMessage
                        </span>
                                    }
                                }
                            }

                        <div class="govuk-radios govuk-radios--conditional " data-module="radios">
                            @{
                                    var radioCheckedPassed = Model.Value == "Pass" ? "checked" : "";
                                    var radioCheckedFailed = Model.Value == "Fail" ? "checked" : "";
                                    var radioCheckedInProgress = Model.Value == "In progress" ? "checked" : "";

 <!-- PASS -->

                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           type="radio"
                                           id="OptionPass"
                                           name="Value"
                                           value="Pass"
                                           data-aria-controls="conditional-OptionPass"
                                           @radioCheckedPassed />

                                    <label class="govuk-label govuk-radios__label" for="OptionPass">
                                        Pass
                                    </label>

                                </div>

                                <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-OptionPass">
                                    <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                        <div class="govuk-form-group">
                                            <label for="OptionPassText" class="govuk-label">
                                                Add comments (optional)
                                            </label>
                                            <textarea class="govuk-textarea js-character-count"
                                                      id="OptionPassText"
                                                      name="OptionPassText"
                                                      rows="5"
                                                      maxlength="10000">@Model.OptionPassText</textarea>
                                        </div>

                                        <span id="word-count-info-OptionPass" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                    </div>
                                </div>

 <!-- FAIL -->

                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           type="radio"
                                           id="OptionFail"
                                           name="Value"
                                           value="Fail"
                                           data-aria-controls="conditional-OptionFail"
                                           @radioCheckedFailed />

                                    <label class="govuk-label govuk-radios__label" for="OptionFail">
                                        Fail
                                    </label>

                                </div>

                                <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-OptionFail">
                                    <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                        <div class="govuk-form-group">
                                            <label for="OptionFailText" class="govuk-label">
                                                Add comments (mandatory)
                                            </label>

                                            @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
                                                {
                                            @foreach (var error in Model.ErrorMessages)
                                                    {
                                            @if (error.Field == "OptionFailText")
                                                        {
                                            <span class="govuk-error-message">
                                                <span class="govuk-visually-hidden">Error:</span> @error.ErrorMessage
                                            </span>
                                                        }
                                                    }
                                                }

                                            <textarea class="govuk-textarea js-character-count @isErrorFailText"
                                                      id="OptionFailText"
                                                      name="OptionFailText"
                                                      rows="5"
                                                      maxlength="10000">@Model.OptionFailText</textarea>
                                        </div>

                                        <span id="word-count-info-OptionFail" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                    </div>
                                </div>

                                <div class="govuk-radios__divider">or</div>

 <!-- IN PROGRESS -->

                                <div class="govuk-radios__item">
                                    <input class="govuk-radios__input"
                                           type="radio"
                                           id="InProgress"
                                           name="Value"
                                           value="In progress"
                                           data-aria-controls="conditional-InProgress"
                                           @radioCheckedInProgress />

                                    <label class="govuk-label govuk-radios__label" for="InProgress">
                                        In progress
                                    </label>

                                </div>

                                <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-InProgress">
                                    <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                        <div class="govuk-form-group">
                                            <label for="OptionInProgressText" class="govuk-label">
                                                Add comments (optional)
                                            </label>
                                            <textarea class="govuk-textarea js-character-count"
                                                      id="OptionInProgressText"
                                                      name="OptionInProgressText"
                                                      rows="5"
                                                      maxlength="10000">@Model.OptionInProgressText</textarea>
                                        </div>

                                        <span id="word-count-info-InProgress" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                    </div>
                                </div>
                            }
                        </div>
                    </fieldset>
                </div>

                <button class="govuk-button" type="submit">Save and continue</button>
            </form>
        </div>
    </div>
    }
</main>
