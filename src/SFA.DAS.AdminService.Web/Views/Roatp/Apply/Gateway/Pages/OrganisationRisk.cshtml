@using SFA.DAS.AssessorService.Domain.Extensions
@model SFA.DAS.AdminService.Web.ViewModels.Roatp.Gateway.OrganisationRiskViewModel

@{
    ViewBag.Title = $"Gateway - {Model.Heading}";
    Layout = "_Layout";
}

@{await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayAssessmentBreadcrumb.cshtml"); }
<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @{await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalValidationSummary.cshtml"); }
            <span class="govuk-caption-xl">
                @Model.Caption
            </span>
            <h1 class="govuk-heading-xl">@Model.Heading</h1>
            <div class="govuk-!-margin-bottom-4">
                <p class="govuk-body govuk-!-margin-bottom-0">
                    UKPRN: @Model.Ukprn
                </p>
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Legal name: @Model.UkrlpLegalName
                </p>
                <p class="govuk-body govuk-!-margin-bottom-0">
                    Type of organisation: @Model.OrganisationType
                </p>
            </div>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <table class="govuk-table govuk-!-margin-bottom-9">
                <tbody class="govuk-table__body">
                    @if (!string.IsNullOrWhiteSpace(Model.UkrlpLegalName))
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Legal name</td>
                            <td class="govuk-table__cell">@Model.UkrlpLegalName</td>
                        </tr>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.TradingName))
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">Trading name</td>
                            <td class="govuk-table__cell">@Model.TradingName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (Model.ApplicationId != Guid.Empty)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form class="js-disable-on-submit" asp-action="EvaluateOrganisationRiskPage" asp-controller="RoatpGatewayOrganisationChecks">
                    @Html.HiddenFor(x => x.ApplicationId)
                    @Html.HiddenFor(x => x.PageId)
                    @Html.HiddenFor(x => x.Caption)
                    @Html.HiddenFor(x => x.Heading)
                    @Html.HiddenFor(x => x.NoSelectionErrorMessage)
                    @Html.HiddenFor(x => x.Ukprn)
                    @Html.HiddenFor(x => x.UkrlpLegalName)
                    @Html.HiddenFor(x => x.ApplicationSubmittedOn)
                    @Html.HiddenFor(x => x.SourcesCheckedOn)
                    @Html.HiddenFor(x => x.OrganisationType)
                    @Html.HiddenFor(x => x.TradingName)
                    @{await Html.RenderPartialAsync("~/Views/Roatp/Apply/Gateway/Pages/_GatewayApprovalSection.cshtml"); }
                    <button class="govuk-button" type="submit">Save and continue</button>
                </form>
            </div>
        </div>
    }
</main>