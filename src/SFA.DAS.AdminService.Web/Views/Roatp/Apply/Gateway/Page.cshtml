@model SFA.DAS.AdminService.Application.ViewModels.RoatpGatewayPageViewModel

@{
    ViewBag.Title = $"Gateway - {Model.Heading}";
    Layout = "_Layout";
    var formGroupError = Model.ErrorMessages != null && Model.ErrorMessages.Any() ? "govuk-form-group--error" : "";
    var isErrorFailText = "";
    var noSelectionMessage = "";
    var failTextMessage = "";
    if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
    {
        foreach (var error in Model.ErrorMessages)
        {
            if (error.Field == "OptionPass")
            {
                noSelectionMessage = error.ErrorMessage;
            }

            if (error.Field == "OptionFailText")
            {
                isErrorFailText = "govuk-textarea--error-override";
                failTextMessage = error.ErrorMessage;
            }
        }
    }


}

<a asp-action="InProgressApplications" asp-controller="RoatpGateway" class="govuk-back-link">Back</a>

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @if (Model.ErrorMessages!=null && Model.ErrorMessages.Any())
            {
                <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
                    <h2 class="govuk-error-summary__title" id="error-summary-title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                            @foreach (var error in Model.ErrorMessages)
                            {
                                <li><a href="#@error.Field">@error.ErrorMessage</a></li>
                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Caption != null)
            {
                <span class="govuk-caption-xl">
                    @Model.Caption
                </span>
            }
            <h1 class="govuk-heading-xl">@Model.Heading</h1>

            @if (Model?.TextListing?.DataRows != null)
            {
                <div class="govuk-!-margin-bottom-4">
                    @foreach (var row in Model.TextListing.DataRows)
                    {
                        <p class="govuk-body govuk-!-margin-bottom-0">
                            @foreach (var column in row.Columns)
                            {
                                @Html.Raw(column)
                            }
                        </p>
                    }
                </div>
            }

        </div>
    </div>

    @if (Model.Tables != null)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                @foreach (var table in Model.Tables)
                {
                    <table class="govuk-table govuk-!-margin-bottom-9">
                        <thead class="govuk-table__head">
                            <tr class="govuk-table__row">
                                @foreach (var heading in table.HeadingTitles)
                                {
                                    <th class="govuk-table__header" scope="col">@heading</th>
                                }
                            </tr>
                        </thead>
                        <tbody class="govuk-table__body">
                            @foreach (var dataRow in table.DataRows)
                            {
                                var hasDetails = !string.IsNullOrEmpty(dataRow.DetailsLabel) && !string.IsNullOrEmpty(dataRow.DetailsValue);

                                <tr class="govuk-table__row @(hasDetails ? "govuk-table__row--no-border" : "")">
                                    @foreach (var column in dataRow.Columns)
                                    {
                                        <td class="govuk-table__cell">@column</td>
                                    }
                                </tr>
                                @if (hasDetails)
                                {
                                    <tr class="govuk-table__row">
                                        <td class="govuk-table__cell" colspan="2">
                                            <details class="govuk-details govuk-!-margin-bottom-0" role="group">
                                                <summary class="govuk-details__summary govuk-!-margin-bottom-0" role="button" aria-controls="" aria-expanded="false">
                                                    <span class="govuk-details__summary-text">
                                                        @dataRow.DetailsLabel
                                                    </span>
                                                </summary>

                                                @* @Mark - What is this id?? *@
                                                <div class="govuk-details__text" id="details-content-fbdd4dd1-d80b-4902-8295-18d62509f38b" aria-hidden="true">
                                                    @dataRow.DetailsValue
                                                </div>
                                            </details>
                                        </td>
                                    </tr>
                                }
                            }
                            @if (Model?.SummaryList?.DataRows != null)
                            {
                                @foreach (var dataRow in Model.SummaryList.DataRows)
                                {
                                    <tr class="govuk-table__row">
                                        @foreach (var column in dataRow.Columns)
                                        {
                                            <td class="govuk-table__cell">@column</td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    }
            
    @if (Model.ApplicationId != Guid.Empty)
    {
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form class="js-disable-on-submit" asp-action="EvaluatePage" asp-controller="RoatpGateway">
                    <input type="hidden" name="ApplicationId" value="@Model.ApplicationId"/>
                    <input type="hidden" name="PageId" value="@Model.PageId"/>

                    <div class="govuk-form-group @formGroupError">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                                <h2 class="govuk-fieldset__heading">
                                    What is the outcome of this check?
                                </h2>
                            </legend>
                            
                            @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
                            {
                                @foreach (var error in Model.ErrorMessages)
                                {
                                    @if (error.Field == "OptionPass")
                                    {
                                        <span class="govuk-error-message">
                                            <span class="govuk-visually-hidden">Error:</span> @error.ErrorMessage
                                        </span>
                                    }
                                }
                            }

                            <div class="govuk-radios govuk-radios--conditional " data-module="radios">
                                @{
                                    var radioCheckedPassed = Model.Value == Model.OptionPass.Value ? "checked" : "";
                                    var radioCheckedFailed = Model.Value == Model.OptionFail.Value ? "checked" : "";
                                    var radioCheckedInProgress = Model.Value == Model.OptionInProgress.Value ? "checked" : "";

                                    <!-- PASS -->

                                    <div class="govuk-radios__item">
                                        <input 
                                            class="govuk-radios__input"
                                            type="radio"
                                            id="OptionPass"
                                            name="Value"
                                            value="@Model.OptionPass.Value "
                                            data-aria-controls="conditional-OptionPass"
                                            @radioCheckedPassed
                                        />

                                        <label class="govuk-label govuk-radios__label" for="OptionPass">
                                            Pass
                                        </label>

                                    </div>

                                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-OptionPass">
                                        <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                            <div class="govuk-form-group">
                                                <label for="OptionPassText" class="govuk-label">
                                                    Add comments (optional)
                                                </label>
                                                <textarea 
                                                    class="govuk-textarea js-character-count"
                                                    id="OptionPassText"
                                                    name="OptionPassText"
                                                    rows="5"
                                                    maxlength="10000"
                                                >@Model.OptionPassText</textarea>
                                            </div>

                                            <span id="word-count-info-OptionPass" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                        </div>
                                    </div>

                                    <!-- FAIL -->

                                    <div class="govuk-radios__item">
                                        <input 
                                            class="govuk-radios__input"
                                            type="radio"
                                            id="OptionFail"
                                            name="Value"
                                            value="@Model.OptionFail.Value"
                                            data-aria-controls="conditional-OptionFail"
                                            @radioCheckedFailed
                                        />

                                        <label class="govuk-label govuk-radios__label" for="OptionFail">
                                            Fail
                                        </label>

                                    </div>

                                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-OptionFail">
                                        <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                            <div class="govuk-form-group">
                                                <label for="OptionFailText" class="govuk-label">
                                                    Add comments (mandatory)
                                                </label>

                                                @if (Model.ErrorMessages != null && Model.ErrorMessages.Any())
                                                {
                                                    @foreach (var error in Model.ErrorMessages)
                                                    {
                                                        @if (error.Field == "OptionFailText")
                                                        {
                                                            <span class="govuk-error-message">
                                                                <span class="govuk-visually-hidden">Error:</span> @error.ErrorMessage
                                                            </span>
                                                        }
                                                    }
                                                }

                                                <textarea
                                                    class="govuk-textarea js-character-count @isErrorFailText"
                                                    id="OptionFailText"
                                                    name="OptionFailText"
                                                    rows="5"
                                                    maxlength="10000"
                                                >@Model.OptionFailText</textarea>
                                            </div>

                                            <span id="word-count-info-OptionFail" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                        </div>
                                    </div>

                                    <div class="govuk-radios__divider">or</div>

                                    <!-- IN PROGRESS -->

                                    <div class="govuk-radios__item">
                                        <input
                                            class="govuk-radios__input"
                                            type="radio"
                                            id="InProgress"
                                            name="Value"
                                            value="@Model.OptionInProgress.Value"
                                            data-aria-controls="conditional-InProgress"
                                            @radioCheckedInProgress
                                        />

                                        <label class="govuk-label govuk-radios__label" for="InProgress">
                                            In progress
                                        </label>

                                    </div>

                                    <div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-InProgress">
                                        <div class="govuk-character-count" data-module="character-count" data-maxwords="150">
                                            <div class="govuk-form-group">
                                                <label for="OptionInProgressText" class="govuk-label">
                                                    Add comments (optional)
                                                </label>
                                                <textarea
                                                    class="govuk-textarea js-character-count"
                                                    id="OptionInProgressText"
                                                    name="OptionInProgressText"
                                                    rows="5"
                                                    maxlength="10000"
                                                >@Model.OptionInProgressText</textarea>
                                            </div>

                                            <span id="word-count-info-InProgress" class="govuk-hint govuk-character-count__message" aria-live="polite"></span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </fieldset>
                    </div>

                    <button class="govuk-button" type="submit">Save and continue</button>
                </form>
            </div>
        </div>
    }
</main>
