@model SFA.DAS.AdminService.Web.ViewModels.Private.CertificateLearnerStartDateViewModel

@{
    ViewBag.Title = (!ViewData.ModelState.IsValid ? "Error: " : "") + "Apprenticeship start date";
    Layout = "_Layout";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        @if (Model.FromApproval)
        {
            <a class="govuk-back-link" asp-controller="CertificateAmend" asp-action="Check" asp-route-fromapproval="true" asp-route-certificateId=@Model.Id>Back</a>
        }
        else
        {
            <a class="govuk-back-link" asp-controller="CertificateAmend" asp-action="Check" asp-route-certificateId=@Model.Id>Back</a>
        }

        <form class="apprentice-learner-date-form js-disable-on-submit" method="post" asp-controller="CertificatePrivateLearnerStartDate">
            <input type="hidden" name="fullDate" id="fullDate" class="date-input" />
            @Html.HiddenFor(c => c.Id)
            @Html.HiddenFor(m => m.StartDate)
            @Html.HiddenFor(c => c.FromApproval)
            <input type="hidden" name="WarningShown" id="WarningShown" value="@Model.WarningShown" />

            @* hidden with css by default *@
            <div class="js-error-summary error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                    There is a problem
                </h2>
                <ul class="js-error-summary-list error-summary-list"></ul>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {

                <div class="error-summary" role="alert" aria-labelledby="error-summary-heading" tabindex="-1">
                    <h2 class="heading-medium error-summary-heading" id="error-summary-heading">
                        There is a problem
                    </h2>
                    <ul class="error-summary-list">
                        <li><a sfa-validation-for="Date"></a></li>
                        <li><a sfa-validation-for="Day"></a></li>
                        <li><a sfa-validation-for="Month"></a></li>
                        <li><a sfa-validation-for="Year"></a></li>
                        <li><a sfa-validation-for="ReasonForChange"></a></li>
                    </ul>
                </div>

            }

            <div sfa-anyvalidationerror-class="after-error-summary">
                <h1 class="govuk-heading-xl">
                    What's the apprenticeship start date?
                </h1>

                <div class="form-group error-message-container" sfa-anyvalidationerror-class="form-group-error">
                    <span class="govuk-error-message" asp-validation-for="Date"></span>
                    <span class="govuk-error-message" asp-validation-for="Day"></span>
                    <span class="govuk-error-message" asp-validation-for="Month"></span>
                    <span class="govuk-error-message" asp-validation-for="Year"></span>

                    <span class="govuk-hint">
                        For example, 15 10 2017
                    </span>
                    <div class="form-date">
                        <div class="form-group form-group-day">
                            <label for="Day">Day</label>
                            <input class="form-control date-input js-integers-only" sfa-validation-for="Day" sfa-validationerror-class="govuk-input--error" asp-for="Day" type="text" maxlength="2" />
                        </div>

                        <div class="form-group form-group-month">
                            <label for="Month">Month</label>
                            <input class="form-control date-input js-integers-only" sfa-validation-for="Month" sfa-validationerror-class="govuk-input--error" asp-for="Month" type="text" maxlength="2" />
                        </div>

                        <div class="form-group form-group-year">
                            <label for="Year">Year</label>
                            <input class="form-control date-input js-integers-only" sfa-validation-for="Year" sfa-validationerror-class="govuk-input--error" asp-for="Year" type="text" maxlength="4" />
                        </div>
                    </div>

                    <div class="govuk-form-group" sfa-validation-for="ReasonForChange" sfa-validationerror-class="govuk-form-group--error">
                        <label class="govuk-label govuk-label--m" for="ReasonForChange">
                        Reason for change
                    </label>
                    <span class="govuk-hint">Provide more detail as to why this change is required.</span>
                    <span class="govuk-error-message" asp-validation-for="ReasonForChange"></span>
                        <textarea class="govuk-textarea" rows="5" name="ReasonForChange" sfa-validation-for="ReasonForChange" sfa-validationerror-class="govuk-input--error" asp-for="ReasonForChange"></textarea>
                    </div>
                </div>
            </div>

            <details>
                <summary><span class="summary">What’s an apprenticeship start date?</span></summary>
                <div class="panel panel-border-narrow" id="what-is-the-apprenticeship-start-date">
                    <p>
                        The start date is the date the apprentice started the apprenticeship.
                    </p>
                </div>
            </details>

            <button type="submit" class="govuk-button">Continue</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    @{await Html.RenderPartialAsync("~/Views/CertificateAmend/_LearnerDateScriptsPartial.cshtml"); }
}