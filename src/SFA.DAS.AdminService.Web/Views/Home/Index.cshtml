@model HomeViewModel
@{
    ViewData["Title"] = "Apprenticeship service admin";
    Layout = "_Layout";
}

<main class="govuk-main-wrapper " id="main-content" role="main">

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Apprenticeship service admin</h1>
            <div class="govuk-inset-text">
                <span>
                    This service was previously known as the ‘ESFA admin services’.
                </span>
            </div>
            <p class="govuk-body">Use this service to:</p>
            <ul class="govuk-list govuk-list--bullet">
                <li>evaluate applications</li>
                <li>manage existing accounts</li>
                <li>view and download reports</li>
                <li>issue certificates</li>
            </ul>
            @if (Model.UseDfESignIn)
            {
                <p class="govuk-body">You’ll need a DfE Sign-in account to use this service. If you don’t have a DfE Sign-in account, you can create one at the next step.</p>    
            }
            <div class="form-group">
                <a asp-action="SignIn" asp-controller="Account" class="govuk-button govuk-button--start">Start now</a>
            </div>
        </div>
    </div>

</main>